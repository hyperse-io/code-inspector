{
  "name": "@hyperse/inspector-component",
  "version": "1.1.2",
  "homepage": "https://github.com/hyperse-io/code-inspector",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperse-io/code-inspector",
    "directory": "packages/inspector"
  },
  "author": {
    "name": "Hyperse",
    "url": "https://github.com/hyperse-io"
  },
  "type": "module",
  "license": "SEE LICENSE IN FILE 'LICENSE'",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "bin/",
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build:forge": "npx flatjs-forge build -d",
    "build": "rimraf dist && npm run build:forge && npm run minify",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "minify": "node ../../scripts/minify.mjs --dest=dist",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint .",
    "test": "run-s test-unit",
    "test-unit": "vitest run",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@flatjs/cli": "^3.0.1",
    "@hyperse/eslint-config-hyperse": "^1.4.7",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "jsdom": "26.1.0",
    "npm-run-all": "4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@floating-ui/core": "^1.7.3",
    "@hyperse/inspector-common": "workspace:*",
    "styled-components": "^6.1.19"
  },
  "resolutions": {
    "styled-components": "^6"
  },
  "peerDependencies": {
    "react": ">=19.1.1",
    "react-dom": ">=19.1.1"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
