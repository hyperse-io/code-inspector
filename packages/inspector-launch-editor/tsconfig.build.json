{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "incremental": false,
    "moduleResolution": "bundler",
    "target": "ES2020",
    "module": "ESNext",
    "noEmit": false,
    "sourceMap": false,
    "declarationMap": false
  },
  "include": ["./src/index.ts"],
  "exclude": [
    "**/*.stories.tsx",
    "**/*.stories.mdx",
    ".storybook/**",
    "dist",
    "node_modules"
  ]
}
